alias ..='cd ..'
alias dirsize='du -skhx'
alias ll="ls -lha"
function rmd() {
  rm -rf $1
}

# find file
function ff() {
  find . -type f -name $1
}
# find directory
function fd() {
  find . -type d -name $1
}

alias profile='vim ~/.bashrc.local'
alias papply='vim ~/.bashrc.local'

# rails
alias ss='rails server -p 3001'
alias tlog='tail -f log/development.log'
alias ropen='open http://localhost:3001'

# git
alias gs='git status'
# alias glog='git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%Creset' --abbrev-commit'
alias glog='git log --name-status'

# svn
alias sup='svn update'
alias scom='svn commit'
alias slog='svn log'
alias svnp='svn log -r head:prev -v'
alias svnstat='svn diff -r PREV:COMMITTED --summarize'
